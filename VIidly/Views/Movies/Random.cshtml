@model VIidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*This is used to conditianally render a css class name*@

@{
    var className = Model.Customers.Count > 5 ? "popular" : null;
}

<h2 class="@className"> @Model.Movie.Name</h2>


<ul>
    @if (Model.Customers.Count == 0)
    {
        //This is the same as the p tag in HTML
        <text>No one has rented this movie before!</text>
    }

    else
    {

        foreach (var customerDto in Model.Customers)
        {
            <li>@customerDto.Name</li>
        }
    }
</ul>